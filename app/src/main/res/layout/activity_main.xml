<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/dl"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

        <RelativeLayout
            android:id="@+id/khung1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iconRunning"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/running"></ImageView>

            <TextView
                android:id="@+id/buocchay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_toRightOf="@+id/iconRunning"
                android:text="1000 bước"></TextView>

            <TextView
                android:id="@+id/kcal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_toRightOf="@+id/buocchay"
                android:text="(130 Kcal"></TextView>

            <TextView
                android:id="@+id/km"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@+id/kcal"
                android:text=", 3km)"></TextView>

            <TextView
                android:id="@+id/muctieu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/buocchay"
                android:layout_margin="3dp"
                android:layout_toRightOf="@id/iconRunning"
                android:text="Mục tiêu:"></TextView>

            <TextView
                android:id="@+id/buocchaymuctieu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/kcal"
                android:layout_marginTop="3dp"
                android:layout_toRightOf="@+id/muctieu"
                android:text="8432"></TextView>


        </RelativeLayout>

        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="wrap_content"
            android:layout_height="278dp"
            android:layout_below="@id/khung1"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_marginStart="50dp"
            android:layout_marginLeft="53dp"
            android:layout_marginTop="55dp"
            android:layout_marginEnd="50dp"
            android:layout_marginRight="49dp"
            android:layout_marginBottom="50dp"
            android:indeterminate="true"
            android:indeterminateDrawable="@drawable/progressbar_circular"
            android:max="100"
            android:padding="10dp"
            android:progress="50"></ProgressBar>

        <TextView
            android:id="@+id/steps"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/progressBar"
            android:gravity="center_vertical"
            android:text="Steps"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="30dp" />

        <TextView
            android:id="@+id/tv_steps"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/steps"
            android:layout_marginTop="10dp"
            android:text="0"
            android:textSize="40dp" />
    </RelativeLayout>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nv"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:headerLayout="@layout/navigation_header"
        app:menu="@menu/navigation_menu"

        />
</androidx.drawerlayout.widget.DrawerLayout>